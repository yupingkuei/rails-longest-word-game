<h1>New game</h1>
<div class="words">
  <% @letters.each do |letter| %>
    <p class="word">
      <%= letter %>
    </p>
  <% end %>
</div>

<p>What's the longest word you can find?</p>
<form action="/score" method="post">
  <input id="input "type="text" name="word" placeholder="type your word">
  <div class="input-group-append">
    <input type="submit" value="Play">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :list, @letters %>
</form>

